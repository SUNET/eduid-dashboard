{% extends "templates/baseform.jinja2" %}

{% block form_generic_description %}
   <h4>{% trans %}National identity number{% endtrans %}</h4>
{% endblock %}

{% block extra_content %}

  {{ safe_actions_url('nins-actions') }}

  {% if nins %}
  <table class='table table-striped table-thin nins'>
    <thead>
      <tr>
        <th>{{_("National identity number")}}</th>
        <th>{{_("Verified")}}</th>
        <th>{{_("Remove")}}</th>
      </tr>
    </thead>

    {% for nin in nins %}
    <tr class='ninrow' data-identifier="{{ loop.index0 }}">
        <td class='identifier'>{{ nin.norEduPersonNIN }}</td>

      {% if nin.verified %}
        <td><i class="icon-ok"
               title='{{_("Verified")}}'></i></td>
        <td></td>
      {% else %}
        <td>
          {% if loop.last %}
          <label>
            <i class='icon-question-sign' title='{{_("Verify code")}}'></i>
            <input class='hide' type='radio' name='verify' value='{{loop.index0}}'>
          </label>
          {% else %}
            <i class='icon-remove' title="{{_('National identity number not verified')}}"></i>
          {% endif %}
        </td>
        <td>
          <label>
            <i class='icon-remove' title='{{_("Remove")}}'></i>
            <input class='hide' type='radio' name='remove' value='{{loop.index0}}'>
          </label>
        </td>
      {% endif %}


    </tr>
    {% endfor %}
  </table>

  {% else %}
    <p>{% trans %}Add a national identity number by clicking the button below{% endtrans %}</p>
  {% endif %}

  <button type='button'
          class='btn add-new' 
          data-toggle='button'>
        <i class='icon-plus'></i>
        {{_('Add national identity number')}}</button>
{% endblock %}


{% block form_generic_form %}
  <div class='form-content hide'>
    {{ form|safe }}
  </div>
{% endblock %}

{% block askdialog_extra_info %}
  {% if proofing_link %}
     {% trans nin=proofing_link %}You can access to your associated inbox nin by clicking this <a href="{{nin}}">link</a>{% endtrans %}
  {% endif %}
{% endblock %}
