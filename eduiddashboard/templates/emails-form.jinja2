{% extends "templates/baseform.jinja2" %}

{% block form_generic_description %}
   <h4>{% trans %}Email{% endtrans %}</h4>
   <p>{% trans %}After adding a new address, go to that account and click the
   link in the confirmation email. Addresses must be confirmed before they can become primary.
   {% endtrans %}</p>
{% endblock %}

{% block extra_content %}

  {{ safe_actions_url('emails-actions') }}

  {% if mails %}
  <table class='table table-striped table-thin emails'>
    <thead>
      <tr>
        <th>{{_("Primary")}}</th>
        <th>{{_("Email")}}</th>
        <th>{{_("Verified")}}</th>
        <th>{{_("Remove")}}</th>
      </tr>
    </thead>

    {% for mail in mails %}
    <tr class='emailrow' data-identifier="{{ loop.index0 }}">
        <td>
          <input type='radio' name='setprimary' value='{{loop.index0}}'
           title='{{_("Make this email address your new primary email address")}}'
           {% if mail.email == primary_email %}checked{% endif %}/></td>

        <td class='identifier'>{{ mail.email }}</td>

      {% if mail.verified %}
        <td><i class="icon-ok"
               title='{{_("Already verified")}}'></i></td>
      {% else %}
        <td>
          <label>
            <i class='icon-question-sign' title='{{_("Resend confirmation email")}}'></i>
            <input class='hide' type='radio' name='verify' value='{{loop.index0}}'>
          </label>
        </td>
      {% endif %}

        <td>
          <label>
            <i class='icon-remove' title='{{_("Remove email address")}}'></i>
            <input class='hide' type='radio' name='remove' value='{{loop.index0}}'>
          </label>
        </td>
    </tr>
    {% endfor %}
  </table>

  {% else %}
    <p>{% trans %}Add an email address by clicking on the button below.{% endtrans %}</p>
  {% endif %}

  <button type='button'
          class='btn add-new' 
          data-toggle='button'>
        <i class='icon-plus'></i>
        {{_('Add email address')}}</button>
{% endblock %}


{% block form_generic_form %}
  <div class='form-content hide'>
    {{ form|safe }}
  </div>
{% endblock %}
