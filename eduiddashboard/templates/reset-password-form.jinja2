{% extends "templates/base.jinja2" %}

{% block loasquare %}
{% endblock %}

{% block contents %}
  {% if message is defined %}
    {{ _(message) }}
  {% else %}
    <div class='reset-password-form-container'>
      <div class='intro'>
      {{ _(intro_message) }}
      </div>

    {{ form|safe }}
  </div>
  {% endif %}
{% endblock %}

{% block extrajs %}

<script>
  $(document).ready(function () {
    var options = {};
    $(':password[name=new_password]').pwstrength(options);
  });
</script>
{% endblock %}
