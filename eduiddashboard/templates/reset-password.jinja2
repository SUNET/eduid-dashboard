{% extends "templates/base.jinja2" %}

{% block loasquare %}
{% endblock %}

{% block contents %}
  <h3>{% trans %}Forgot your password?{% endtrans %}</h3>
  {% trans %}<p>Password reset is possible using either your government inbox or e-mail.</p>{% endtrans %}

  {% trans %}<p>The recommended method to reset your password is by using your government inbox. If e-mail is used
  to reset your password your eduID account status will be reset to unconfirmed.</p>{% endtrans %}

  <div class="well reset-password-buttons">
    <p>
      <a href="{{ request.route_path('reset-password-mina') }}" class="btn btn-success btn-large">
      {% trans %}Reset password by government mailbox service{% endtrans %}
      </a>
    </p>

    <p>
      <a href="{{ request.route_path('reset-password-email') }}" class="btn btn-danger btn-large"><i class="icon-warning-sign"></i>
      {% trans %}Reset password by e-mail{% endtrans %}
      </a>
    </p>
  </div>

{% endblock %}
