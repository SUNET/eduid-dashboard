{% extends "templates/base.jinja2" %}

{% block loasquare %}
{% endblock %}

{% block contents %}
  <h3>{% trans %}Forgot your password?{% endtrans %}</h3>
  <p>{% trans %}Password reset is possible using an email that you have registered on your account.{% endtrans %}</p>

  <p>
      {% trans %}If email is used to reset your password your eduID account status will be reset to unconfirmed.{% endtrans %}
      {% if not enable_mm_verification %}{% trans %}Unfortunately, we have been locked out from ”Mina Meddelanden”. We are currently working on other methods for password reset, that will be able to use without resetting the account status to unconfirmed.{% endtrans %}{% endif %}
  </p>

  <div class="well reset-password-buttons">
      <p>
          {% if enable_mm_verification %}
            <a href="{{ request.route_path('reset-password-mina') }}" class="btn btn-success btn-lg">{% trans %}Reset password by government mailbox service{% endtrans %}</a>
          {% else %}
             <button id="buttonNoMM" class="btn btn-primary btn-lg">{% trans %}Reset password by government mailbox service{% endtrans %}</button>
          {% endif %}
      </p>
      <p>
          <a href="{{ request.route_path('reset-password-email') }}" class="btn btn-danger btn-lg">{% trans %}Reset password by e-mail{% endtrans %}</a>
    </p>
  </div>

{% endblock %}

{% block extra_jsdata %}
    {% if not enable_mm_verification %}
      <span class="dataholder" id="disabled_mm" data-title="{{ _("Mina Meddelanden disabled") }}" data-content="{{ _("For the time being Skatteverket has disabled Vetenskapsrådet/SUNET/eduID from using Mina Meddelanden due to pressure from SWEDBANK. For more information:")}} <a href='https://www.sunet.se/sunet-mina-meddelanden/'>{{ _("Vetenskapsrådet's press release") }}</a>"></span>
    {% endif %}
{% endblock %}

{% block extrajs %}
    {% if not enable_mm_verification %}
      <script type="text/javascript" src="{{'eduiddashboard:static/js/dashboard-no-mm-reset-password.js'|static_url}}"></script>
    {% endif %}
{% endblock %}
