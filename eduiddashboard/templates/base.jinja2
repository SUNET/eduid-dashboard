<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title>{{ _("eduID Dashboard") }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <link href="{{'eduiddashboard:static/css/bootstrap-2.3.1.min.css'|static_url}}" rel="stylesheet" media="screen">
    <link href="{{'eduiddashboard:static/css/screen.css'|static_url}}" rel="stylesheet" media="screen">
    {% block extracss %}
    {% endblock %}

    {% block headjs %}
    {% endblock %}
  </head>
  <body>
    <div id='wrap'>
      <div class="container">
        <div class="masthead">
          <ul class="nav nav-pills pull-right">
            <li class="{% block nav_class_home %}{% endblock %}"><a href="{{ request.route_path('home') }}">{{ _("Home") }}</a></li>
            <li class="{% block nav_class_help %}{% endblock %}"><a href="{{ request.route_path('help') }}">{{ _("Help") }}</a></li>
          </ul>
          <h3 class="muted"><a href="{{ request.route_path('home') }}">eduID</a></h3>
        </div>

       <div class="messages">
       {% for message in request.session.pop_flash() %}
         <div class="alert alert-{{ message|get_flash_message_type }}">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           {{ message|get_flash_message_text }}
         </div>
       {% endfor %}
       </div>

        <div>
          {% block loasquare %}
          {% with loa=request.context.get_loa() %}
            <div class='loa-big'>
              <div>
                <a href='#'
                  title='{{_("Assurance level identifier:")}} {{ loa }}'>{{_(loa)}}</a>
              </div>
            </div>
          {% endwith %}
          {% endblock %}

          {% block title %}
          {% endblock %}
        </div>
        <div class='clearfix'></div>

        {% block contents %}

        {% endblock %}
      </div>
    </div>

    <div class='clearfix'></div>

    <div class='push'></div>

    <div class="footer">
      <div class='container'>
        <p>&copy; NORDUnet 2013</p>
      </div>
    </div>

    <script src="{{'deform:static/scripts/jquery-1.7.2.min.js'|static_url}}"></script>
    <script src="{{'eduiddashboard:static/js/libs/bootstrap-2.3.1.min.js'|static_url}}"></script>
    <script src="{{'eduiddashboard:static/js/userstatus.js'|static_url}}"></script>
    <script src="{{'eduiddashboard:static/js/pwstrength.js'|static_url}}"></script>
    {% block extrajs %}
    {% endblock %}
  </body>
</html>
